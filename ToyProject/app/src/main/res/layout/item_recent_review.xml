<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/recent_review_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/lecture_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:text="과목명 : 교수명"
        android:textColor="@color/OnBackground"
        android:textSize="14sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/server_lecture_star1"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_marginEnd="3dp"
            app:srcCompat="@drawable/icn_e_rating_star_yellow" />

        <ImageView
            android:id="@+id/server_lecture_star2"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_marginEnd="3dp"
            app:srcCompat="@drawable/icn_e_rating_star_yellow" />

        <ImageView
            android:id="@+id/server_lecture_star3"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_marginEnd="3dp"
            app:srcCompat="@drawable/icn_e_rating_star_yellow" />

        <ImageView
            android:id="@+id/server_lecture_star4"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_marginEnd="3dp"
            app:srcCompat="@drawable/icn_e_rating_star_yellow" />

        <ImageView
            android:id="@+id/server_lecture_star5"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_marginEnd="3dp"
            app:srcCompat="@drawable/icn_e_rating_star_yellow" />

    </LinearLayout>

    <TextView
        android:id="@+id/lecture_semester"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginTop="4dp"
        android:text="21년 1학기 수강자"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/review_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginTop="4dp"
        android:text="강의평"
        android:textColor="@color/OnBackground"
        android:textSize="13sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/background_lightlightgray">

    </View>
</LinearLayout>