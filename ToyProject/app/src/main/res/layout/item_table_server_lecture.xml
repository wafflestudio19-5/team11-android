<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/server_lecture_item_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="20dp"
        android:paddingTop="10dp"
        android:paddingEnd="20dp"
        android:paddingBottom="5dp">

        <TextView
            android:id="@+id/server_lecture_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="소그룹 인문학 주제 탐구 2"
            android:textColor="@color/OnBackground"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/server_lecture_instructor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="조은수"
            android:textColor="#444444"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/server_lecture_title" />

        <TextView
            android:id="@+id/server_lecture_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:text="목(16:00~17:50)"
            android:textColor="#737373"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/server_lecture_instructor" />

        <TextView
            android:id="@+id/server_lecture_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="7-112"
            android:textColor="#737373"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/server_lecture_time" />

        <TextView
            android:id="@+id/server_lecture_year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="1학년"
            android:textColor="#737373"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/server_lecture_location" />

        <TextView
            android:id="@+id/server_lecture_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:layout_marginTop="2dp"
            android:text="전선"
            android:textColor="#737373"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@id/server_lecture_year"
            app:layout_constraintTop_toBottomOf="@+id/server_lecture_location" />

        <TextView
            android:id="@+id/server_lecture_credit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:layout_marginTop="2dp"
            android:text="2학점"
            android:textColor="#737373"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@id/server_lecture_type"
            app:layout_constraintTop_toBottomOf="@+id/server_lecture_location" />

        <TextView
            android:id="@+id/server_lecture_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:layout_marginTop="2dp"
            android:text="M2169.008300"
            android:textColor="#737373"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@id/server_lecture_credit"
            app:layout_constraintTop_toBottomOf="@+id/server_lecture_location" />

        <TextView
            android:id="@+id/server_lecture_class_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:layout_marginTop="2dp"
            android:text="001"
            android:textColor="#737373"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@id/server_lecture_code"
            app:layout_constraintTop_toBottomOf="@+id/server_lecture_location" />

        <ImageView
            android:id="@+id/server_lecture_star5"
            android:layout_width="12sp"
            android:layout_height="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/icn_e_rating_star_yellow" />

        <ImageView
            android:id="@+id/server_lecture_star4"
            android:layout_width="12sp"
            android:layout_height="12sp"
            app:layout_constraintEnd_toStartOf="@id/server_lecture_star5"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/icn_e_rating_star_yellow" />

        <ImageView
            android:id="@+id/server_lecture_star3"
            android:layout_width="12sp"
            android:layout_height="12sp"
            app:layout_constraintEnd_toStartOf="@id/server_lecture_star4"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/icn_e_rating_star_yellow" />

        <ImageView
            android:id="@+id/server_lecture_star2"
            android:layout_width="12sp"
            android:layout_height="12sp"
            app:layout_constraintEnd_toStartOf="@id/server_lecture_star3"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/icn_e_rating_star_yellow" />

        <ImageView
            android:id="@+id/server_lecture_star1"
            android:layout_width="12sp"
            android:layout_height="12sp"
            app:layout_constraintEnd_toStartOf="@id/server_lecture_star2"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/icn_e_rating_star_yellow" />

        <TextView
            android:id="@+id/server_lecture_picked_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="2dp"
            android:text="3"
            android:textColor="#A4A4A4"
            android:textSize="13sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/server_lecture_star5" />

        <TextView
            android:id="@+id/server_lecture_picked"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="3dp"
            android:text="담은"
            android:textColor="#A4A4A4"
            android:textSize="11sp"
            app:layout_constraintEnd_toStartOf="@id/server_lecture_picked_num"
            app:layout_constraintTop_toBottomOf="@+id/server_lecture_star4" />

        <TextView
            android:id="@+id/server_lecture_quota_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="2dp"
            android:text="10"
            android:textColor="#A4A4A4"
            android:textSize="13sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/server_lecture_picked_num" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="3dp"
            android:text="정원"
            android:textColor="#A4A4A4"
            android:textSize="11sp"
            app:layout_constraintEnd_toStartOf="@id/server_lecture_quota_num"
            app:layout_constraintTop_toBottomOf="@+id/server_lecture_picked" />

        <ImageView
            android:id="@+id/server_lecture_dot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="2dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/server_lecture_quota_num"
            app:srcCompat="@drawable/dot_green" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:id="@+id/server_lecture_item_more_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingStart="20dp"
        android:paddingTop="5dp"
        android:paddingEnd="20dp"
        android:paddingBottom="10dp">

        <TextView
            android:id="@+id/server_lecture_item_level"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="수강대상: 학사"
            android:textColor="@color/Primary"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/server_lecture_item_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="비고: 어쩌구저쩌구"
            android:textColor="@color/Primary"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/server_lecture_item_feature"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="형태: 이론/이론/이론/실습"
            android:textColor="@color/Primary"
            android:textSize="11sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/server_lecture_item_add"
                android:layout_width="100dp"
                android:layout_height="31dp"
                android:layout_gravity="center"
                android:layout_marginEnd="10dp"
                android:background="@drawable/btn_login"
                android:backgroundTint="#C62918"
                android:text="시간표에 추가"
                android:textColor="@color/OnPrimary"
                android:textSize="13sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/server_lecture_item_rating"
                android:layout_width="55dp"
                android:layout_height="31dp"
                android:layout_gravity="center"
                android:layout_marginEnd="10dp"
                android:background="@drawable/btn_border"
                android:stateListAnimator="@null"
                android:text="강의평"
                android:textColor="#737373"
                android:textSize="13sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/server_lecture_item_syllabus"
                android:layout_width="55dp"
                android:layout_height="31dp"
                android:layout_gravity="center"
                android:layout_marginEnd="10dp"
                android:background="@drawable/btn_border"
                android:stateListAnimator="@null"
                android:text="계획서"
                android:textColor="#737373"
                android:textSize="13sp" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>