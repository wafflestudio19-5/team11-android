<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/article_ui"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:layout_marginBottom="6dp"
    android:layout_marginTop="6dp">

    <TextView
        android:id="@+id/article_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="안녕하세요~ 와플스튜디오입니다."
        android:textStyle="bold"
        android:textColor="@color/OnBackground"
        android:layout_marginBottom="2dp"/>

    <TextView
        android:id="@+id/article_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="와플스튜디오에서 에브리타임을 만들고 있습니다. 많은 사용 부탁드립니다."
        android:textSize="12dp"
        android:layout_marginBottom="2dp"
        android:maxLines="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginBottom="6dp">

        <TextView
            android:id="@+id/article_written_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4분 전 | "
            android:textSize="10dp" />

        <TextView
            android:id="@+id/article_writer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="익명"
            android:textSize="10dp" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/baseline_thumb_up_off_alt_24"
            android:layout_marginRight="3dp"/>

        <TextView
            android:id="@+id/article_like_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="9"
            android:textSize="12dp"
            android:textColor="@color/PrimaryVariant"
            android:layout_marginRight="7dp"/>

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/baseline_chat_bubble_outline_24"
            android:layout_marginRight="3dp"/>

        <TextView
            android:id="@+id/article_comment_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5"
            android:textSize="12dp"
            android:textColor="@color/SecondaryVariant"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="3px"
        android:background="#D3D3D3"/>

</LinearLayout>
