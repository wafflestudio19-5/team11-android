<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/recent_review_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="6dp"
    android:layout_marginBottom="6dp"
    android:clickable="true"
    android:focusable="true"
    android:background="?attr/selectableItemBackground"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/server_lecture_star1"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="3dp"
            app:srcCompat="@drawable/icn_e_rating_star_yellow" />

        <ImageView
            android:id="@+id/server_lecture_star2"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_marginEnd="3dp"
            app:srcCompat="@drawable/icn_e_rating_star_yellow" />

        <ImageView
            android:id="@+id/server_lecture_star3"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_marginEnd="3dp"
            app:srcCompat="@drawable/icn_e_rating_star_yellow" />

        <ImageView
            android:id="@+id/server_lecture_star4"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_marginEnd="3dp"
            app:srcCompat="@drawable/icn_e_rating_star_yellow" />

        <ImageView
            android:id="@+id/server_lecture_star5"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_marginEnd="3dp"
            app:srcCompat="@drawable/icn_e_rating_star_yellow" />

    </LinearLayout>

    <TextView
        android:id="@+id/lecture_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginStart="20sp"
        android:text="과목명 : 교수명"
        android:textColor="@color/OnBackground"
        android:textSize="16sp" />


    <TextView
        android:id="@+id/review_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginStart="20sp"
        android:text="강의평"
        android:textColor="@color/OnBackground"
        android:textSize="12dp" />
</LinearLayout>